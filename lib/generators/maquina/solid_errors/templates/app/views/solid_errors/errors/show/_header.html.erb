<%# locals: (error:) %>

<div class="flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-bold text-foreground">Error Details</h1>
    <p class="mt-1 text-sm text-muted-foreground">
      <%= error.exception_class %> â€¢ First seen <%= time_ago_in_words(error.occurrences.minimum(:created_at)) %> ago
    </p>
  </div>

  <div class="flex items-center gap-4">
    <%= link_to solid_errors.root_path(scope: error.resolved? ? :resolved : :unresolved), 
        class: "inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors" do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide"
      >
        <path d="m12 19-7-7 7-7" />
        <path d="M19 12H5" />
      </svg>
      Back to Errors
    <% end %>
  </div>
</div>
